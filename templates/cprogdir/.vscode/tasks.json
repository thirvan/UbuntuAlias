{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Main",
			"type": "shell",
			"command": "make",
			"args": [
				"main",
				"--directory=${workspaceFolder};"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": "$msCompile"
		}
	]
}